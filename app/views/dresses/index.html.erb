<section class="jumbotron">
  <div class="header-greetings">
    <h2>Because you are beautiful!</h2>
  </div>
</section>

<div> <h3>All dresses</h3> </div>

  <div class="card-deck d-flex justify-content-between align-items-stretch flex-wrap"> 
    <% @dresses.each do |dress| %> 
        <div class="card mb-4" style="width: 280px;">
          <%= image_tag dress.picture, class: "card-img-top" if dress.picture.attached? %>
          <div class="card-body">
              <h5 class="card-title">
                <%=link_to dress.name, dress_path(dress)%>
              </h5>
              <h6 class="card-subtitle mb-2 text-muted"><%=dress.color%></h6>
              <p class="card-text mt-2">AUD$<%=(dress.price)/100 %></p>
              <% if dress.user == current_user %>
                <%=link_to 'Edit', edit_dress_path(dress), class: "btn btn-warning"%>
                <%=link_to 'Delete', dress_path(dress), class: "btn btn-danger", method: "delete", data: { confirm: "Are you sure?" }%>
              <% else %>
                <a href="#" class="btn btn-primary">Buy</a>
              <% end %>
          </div>
        </div> 
    <%end%> 
  </div> 


<%= link_to 'Sell a Wedding Dress', new_dress_path, class:"btn btn-secondary" %>

